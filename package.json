{
  "name": "blockchain-exchange",
  "displayName": "blockchain-exchange",
  "description": "vscode 配置状态栏查看 比特币价格；vscode 极简对接 Bybit Binance(币安) 交易所，通过 vscode 挂单、撤单、划转等",
  "version": "1.0.1",
  "publisher": "wq599263163",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:EXCHANGE",
    "onStartupFinished"
  ],
  "keywords": [
    "btc",
    "eth",
    "blockchain",
    "vscode",
    "exchange",
    "bybit",
    "binance",
    "币安"
  ],
  "icon": "img/icon.png",
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "blockchain-exchange.coin": {
          "type": "array",
          "default": [
            "BTCUSDT",
            "ETHUSDT"
          ],
          "description": "配置需要监控的数字货币"
        },
        "blockchain-exchange.bybitCoin": {
          "type": "array",
          "default": [
            "BTCUSDT",
            "ETHUSDT",
            "BITUSDT"
          ],
          "description": "配置 Bybit 交易对"
        },
        "blockchain-exchange.binanceCoin": {
          "type": "array",
          "default": [
            "BTCBUSD",
            "ETHBUSD",
            "BNBBUSD"
          ],
          "description": "配置 Binance(币安) 交易对"
        },
        "blockchain-exchange.updateInterval": {
          "type": "number",
          "default": 10000,
          "description": "配置轮询请求最新数据的时间间隔，单位：毫秒"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "blockChain",
          "title": "比特币交易&价格监控",
          "icon": "img/icon.svg"
        }
      ]
    },
    "views": {
      "blockChain": [
        {
          "id": "EXCHANGE",
          "name": "Exchange"
        },
        {
          "id": "MARKET",
          "name": "Market"
        }
      ]
    },
    "commands": [
      {
        "command": "coin.focus",
        "title": "跳转到浏览器交易所地址"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn build && yarn compile",
    "dev": "cd web && yarn start",
    "build": "cd web && yarn build",
    "compile": "tsc -p ./ && yarn build",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn compile && yarn lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "binance": "^2.1.0",
    "bybit-api": "^3.0.1",
    "fs-extra": "^10.1.0",
    "open": "^8.4.0"
  }
}
