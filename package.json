{
  "name": "blockchain-tools",
  "displayName": "Blockchain Tools",
  "description": "vscode 配置状态栏查看 比特币价格、查看资金费率、常用工具、各交易所下单等",
  "version": "1.1.21",
  "publisher": "wq599263163",
  "repository": {
    "type": "git",
    "url": "https://github.com/cryptochain-tools/blockchain-exchange.git"
  },
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:EXCHANGE",
    "onStartupFinished"
  ],
  "keywords": [
    "btc",
    "blockchain-tools",
    "funding-rate",
    "资金费率",
    "eth",
    "blockchain",
    "vscode",
    "exchange",
    "bybit",
    "binance",
    "币安"
  ],
  "icon": "img/icon.png",
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "blockchain-tools.coin": {
          "type": "array",
          "default": [
            "BTCUSDT",
            "ETHUSDT",
            "ETHBTC"
          ],
          "description": "配置需要监控的数字货币"
        },
        "blockchain-tools.bybitCoin": {
          "type": "array",
          "default": [
            "BTCUSDT",
            "ETHUSDT",
            "BITUSDT"
          ],
          "description": "配置 Bybit 交易对"
        },
        "blockchain-tools.binanceCoin": {
          "type": "array",
          "default": [
            "BTCBUSD",
            "ETHBUSD",
            "BNBBUSD"
          ],
          "description": "配置 Binance(币安) 交易对"
        },
        "blockchain-tools.updateInterval": {
          "type": "number",
          "default": 10000,
          "description": "配置轮询请求最新数据的时间间隔，单位：毫秒"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "blockChain",
          "title": "比特币交易&价格监控",
          "icon": "img/icon.svg"
        }
      ]
    },
    "views": {
      "blockChain": [
        {
          "id": "EXCHANGE",
          "name": "Exchange"
        },
        {
          "id": "MARKET",
          "name": "Market"
        }
      ]
    },
    "commands": [
      {
        "command": "coin.focus",
        "title": "跳转到浏览器交易所地址"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build": "cd web && npm run build",
    "compile": "tsc -p ./ && npm run build",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.8.4",
    "@types/vscode": "^1.83.0",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "@vscode/test-electron": "^2.3.3",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^10.3.1",
    "mocha": "^10.2.0",
    "prettier": "3.0.0-alpha.7-for-vscode",
    "typescript": "^5.1.5"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "binance": "^2.1.0",
    "bybit-api": "^3.0.1",
    "crypto-js": "^4.1.1",
    "fs-extra": "^11.1.1",
    "is-wsl":"^2.2.0",
    "is-docker":"^2.1.1",
    "define-lazy-prop": "^2.0.0"
  }
}
